<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InvitationConfirmationActivity"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/confirmationMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your sms text invitation has been sent. You will be notified when your contact will register to the application"
            android:textSize="18sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/returnHome"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/confirmationMessage"
        android:layout_centerHorizontal="true"
        android:text="Return to Home page"
        android:layout_marginTop="74dp" />

</RelativeLayout>
